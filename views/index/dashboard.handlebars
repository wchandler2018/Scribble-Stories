<h2>Welcome Back, {{user.firstName}}</h2>
<h5>Your Stories</h5>

{{#if stories}}
<table class="striped ">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td> <a href="/stories/show/{{id}}">{{title}}</a></td>
            <td>{{formatDate date "MMMM do YYYY"}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td><a class="btn left-align"href="/stories/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit</a>
            <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn red"><i class="fas fa-trash-alt"></i> Delete</button>
            </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}